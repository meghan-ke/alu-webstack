#!/usr/bin/env bash
# Function to query DNS records and display information
query_subdomain() {
    local domain="$1"
    local subdomain="$2"
    
    # Query DNS and extract record type and destination
    # shellcheck disable=SC2086
    dig_output=$(dig "$subdomain.$domain" +short)
    
    # Determine record type (A record in this case)
    record_type="A"
    
    # Extract destination (first IP from dig output)
    destination=$(echo "$dig_output" | awk 'NR==1')
    
    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# Function to audit all default subdomains
audit_all_subdomains() {
    local domain="$1"
    
    # Define subdomains in the required order
    subdomains=("www" "lb-01" "web-01" "web-02")
    
    # Query each subdomain
    for sub in "${subdomains[@]}"; do
        query_subdomain "$domain" "$sub"
    done
}

# Main script logic
main() {
    local domain="$1"
    local subdomain="$2"
    
    if [ -n "$subdomain" ]; then
        # Specific subdomain audit
        query_subdomain "$domain" "$subdomain"
    else
        # Full domain audit
        audit_all_subdomains "$domain"
    fi
}

# Execute main function with arguments
main "$1" "$2"
